	<!-- Calculate server resources -->
	<%
		let ram = 0;
		let disk = 0;
		let cpu = 0;
		let servers = 0;
		let port = 0;
		let database = 0;
		let backup = 0;
		let allocation = 0;
		
		if (pterodactyl && pterodactyl.relationships && pterodactyl.relationships.servers && pterodactyl.relationships.servers.data) {
			servers = pterodactyl.relationships.servers.data.length;
			
			for (let i = 0, len = pterodactyl.relationships.servers.data.length; i < len; i++) {
				ram = ram + (typeof pterodactyl.relationships.servers.data[i].attributes.limits.memory == "number" ? pterodactyl.relationships.servers.data[i].attributes.limits.memory : 0);
				disk = disk + (typeof pterodactyl.relationships.servers.data[i].attributes.limits.disk == "number" ? pterodactyl.relationships.servers.data[i].attributes.limits.disk : 0);
				cpu = cpu + (typeof pterodactyl.relationships.servers.data[i].attributes.limits.cpu == "number" ? pterodactyl.relationships.servers.data[i].attributes.limits.cpu : 0);
				
				// Count databases, allocations, backups, and ports if available in server attributes
				if (pterodactyl.relationships.servers.data[i].attributes.feature_limits) {
					database += (typeof pterodactyl.relationships.servers.data[i].attributes.feature_limits.databases == "number" ? pterodactyl.relationships.servers.data[i].attributes.feature_limits.databases : 0);
					backup += (typeof pterodactyl.relationships.servers.data[i].attributes.feature_limits.backups == "number" ? pterodactyl.relationships.servers.data[i].attributes.feature_limits.backups : 0);
					allocation += (typeof pterodactyl.relationships.servers.data[i].attributes.feature_limits.allocations == "number" ? pterodactyl.relationships.servers.data[i].attributes.feature_limits.allocations : 0);
				}
				
				// Count ports (this is an estimate as ports aren't directly exposed)
				port += 1; // Assume at least one port per server
			}
		}
		
		const userData = {
			id: userinfo.id,
			username: userinfo.username || userinfo.email.split('@')[0],
			email: userinfo.email,
			isAdmin: typeof req.session !== 'undefined' ? req.session.isAdmin : false
		};
		
		const packageData = typeof packages !== 'undefined' ? packages : {
			ram: 0,
			disk: 0,
			cpu: 0,
			servers: 0,
			port: 0,
			database: 0,
			backup: 0,
			allocation: 0
		};
		
		// Ensure all required properties exist in packageData
		if (typeof packageData.port === 'undefined') packageData.port = 0;
		if (typeof packageData.database === 'undefined') packageData.database = 0;
		if (typeof packageData.backup === 'undefined') packageData.backup = 0;
		if (typeof packageData.allocation === 'undefined') packageData.allocation = 0;
		
		// Calculate total resources (package + extra)
		const extraData = typeof extraresources !== 'undefined' ? extraresources : {
			ram: 0,
			disk: 0,
			cpu: 0,
			servers: 0,
			port: 0,
			database: 0,
			backup: 0,
			allocation: 0
		};
		
		// Ensure all required properties exist in extraData
		if (typeof extraData.port === 'undefined') extraData.port = 0;
		if (typeof extraData.database === 'undefined') extraData.database = 0;
		if (typeof extraData.backup === 'undefined') extraData.backup = 0;
		if (typeof extraData.allocation === 'undefined') extraData.allocation = 0;
		
		const totalRam = packageData.ram + extraData.ram;
		const totalDisk = packageData.disk + extraData.disk;
		const totalCpu = packageData.cpu + extraData.cpu;
		const totalServers = packageData.servers + extraData.servers;
		const totalPort = packageData.port + extraData.port;
		const totalDatabase = packageData.database + extraData.database;
		const totalBackup = packageData.backup + extraData.backup;
		const totalAllocation = packageData.allocation + extraData.allocation;
		
		// Available resources
		const availableRam = totalRam - ram;
		const availableDisk = totalDisk - disk;
		const availableCpu = totalCpu - cpu;
		const availableServers = totalServers - servers;
		const availablePort = totalPort - port;
		const availableDatabase = totalDatabase - database;
		const availableBackup = totalBackup - backup;
		const availableAllocation = totalAllocation - allocation;
		
		// Calculate progress percentages with safety checks
		const ramWidth = totalRam > 0 ? Math.min(100, Math.round((ram / totalRam) * 100)) : 0;
		const diskWidth = totalDisk > 0 ? Math.min(100, Math.round((disk / totalDisk) * 100)) : 0;
		const cpuWidth = totalCpu > 0 ? Math.min(100, Math.round((cpu / totalCpu) * 100)) : 0;
		const serversWidth = totalServers > 0 ? Math.min(100, Math.round((servers / totalServers) * 100)) : 0;
	%>

