<%
// Set the current page for active menu highlighting
const currentPage = 'leaderboard';

// Set the page title
const pageTitle = 'Leaderboard - ' + (typeof extra !== 'undefined' && extra && extra.dashboard ? extra.dashboard.title : 'Dashboard');
