                                        <i class="fas fa-download mr-2"></i>Export
                                    </button>
                                </div>
                            </div>

                            <!-- Leaderboard Table -->
                            <div class="overflow-x-auto">
                                <table class="w-full">
                                    <thead>
                                        <tr class="text-left border-b border-gray-700">
                                            <th class="pb-4 text-gray-400 font-medium">Rank</th>
                                            <th class="pb-4 text-gray-400 font-medium">User</th>
