<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<title><%= extra.admin.title.default %></title>
	<link rel="icon" type="image/gif" href="/assets/img/Flaxy Nodes v2.2.gif"/> 
	
	<!-- Fonts and Icons -->
	<link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
	<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
	
	<!-- Tailwind CSS -->
	<script src="https://cdn.tailwindcss.com"></script>
	<script>
		tailwind.config = {
			darkMode: 'class',
			theme: {
				extend: {
					fontFamily: {
						sans: ['Inter', 'sans-serif'],
					},
					colors: {
						primary: {
							50: '#f0f9ff',
							100: '#e0f2fe',
							200: '#bae6fd',
							300: '#7dd3fc',
							400: '#38bdf8',
							500: '#0ea5e9',
							600: '#0284c7',
							700: '#0369a1',
							800: '#075985',
							900: '#0c4a6e',
							950: '#082f49',
						},
						dark: {
							base: '#111827',
							light: '#1F2937',
							lighter: '#374151',
							card: '#1E293B'
						}
					},
					animation: {
						'fade-in': 'fadeIn 0.5s ease-in-out',
						'pulse-slow': 'pulse 4s cubic-bezier(0.4, 0, 0.6, 1) infinite',
					},
					keyframes: {
						fadeIn: {
							'0%': { opacity: '0' },
							'100%': { opacity: '1' },
						}
					}
				}
			}
		}
	</script>
	
	<style>
		body {
			background-color: #0f172a;
			color: #f1f5f9;
			font-family: 'Inter', sans-serif;
		}
		.navbar {
			background-color: rgba(15, 23, 42, 0.7);
			backdrop-filter: blur(10px);
			border-bottom: 1px solid rgba(148, 163, 184, 0.1);
		}
		.sidebar {
			background-color: #1e293b;
			border-right: 1px solid rgba(148, 163, 184, 0.1);
			transition: all 0.3s ease;
		}
		.card {
			background-color: #1e293b;
			border: 1px solid rgba(148, 163, 184, 0.1);
			transition: all 0.3s ease;
		}
		.card:hover {
			transform: translateY(-2px);
			box-shadow: 0 10px 15px -3px rgba(0, 0, 0, 0.1), 0 4px 6px -2px rgba(0, 0, 0, 0.05);
		}
		.stat-card {
			border: 1px solid rgba(148, 163, 184, 0.1);
		}
		.gradient-border {
			position: relative;
			border-radius: 0.5rem;
			z-index: 0;
			overflow: hidden;
			padding: 1px;
		}
		.gradient-border::before {
			content: '';
			position: absolute;
			top: 0;
			left: 0;
			right: 0;
			bottom: 0;
			border-radius: 0.5rem;
			padding: 2px;
			background: linear-gradient(45deg, #0ea5e9, #8b5cf6, #ec4899);
			-webkit-mask: linear-gradient(#fff 0 0) content-box, linear-gradient(#fff 0 0);
			-webkit-mask-composite: xor;
			mask-composite: exclude;
			z-index: -1;
		}
		.main-content {
			animation: fadeIn 0.5s ease-in-out;
		}
		@keyframes fadeIn {
			0% { opacity: 0; }
			100% { opacity: 1; }
		}
		
		/* Custom Scrollbar */
		::-webkit-scrollbar {
			width: 8px;
		}
		::-webkit-scrollbar-track {
			background: #1e293b;
		}
		::-webkit-scrollbar-thumb {
			background: #475569;
			border-radius: 4px;
		}
		::-webkit-scrollbar-thumb:hover {
			background: #64748b;
		}
		
		.active-nav {
			background-color: #0284c7;
			color: white;
		}
	</style>
</head>
<body class="min-h-screen">
	<!-- User Data Preparation -->
	<%
		const userData = {
			id: req.session.userinfo.id,
			username: req.session.userinfo.username || req.session.userinfo.email.split('@')[0],
			email: req.session.userinfo.email,
			discriminator: req.session.userinfo.discriminator,
			avatar: req.session.userinfo.avatar,
			isAdmin: typeof req.session !== 'undefined' ? req.session.isAdmin : false
		};
		
		// Set up admin stats based on available data
		const totalUsers = typeof req.session.allUsers !== 'undefined' ? req.session.allUsers.length : 0;
		const totalServers = typeof req.session.allServers !== 'undefined' ? req.session.allServers.length : 0;
		const activeUsers = Math.floor(totalUsers * 0.8); // Placeholder - replace with actual data
		const revenue = Math.floor(Math.random() * 5000); // Placeholder - replace with actual data
	%>

	<!-- Navbar -->
	<nav class="navbar fixed w-full h-16 z-10 px-4 py-2.5 flex items-center justify-between">
		<div class="flex items-center">
			<a href="/" class="flex items-center">
				<img src="/assets/img/FlaxyNodes_logo.gif" class="h-8 w-8 mr-3 rounded-full" alt="Flaxy Nodes Logo">
				<div class="flex flex-col">
					<span class="self-center text-xl font-bold text-white">Flaxy Nodes</span>
					<span class="text-xs text-gray-400">Premium Game Hosting</span>
				</div>
			</a>
		</div>
		
		<div class="flex items-center gap-4">
			<div class="relative inline-block">
				<button id="dropdownBtn" class="flex items-center px-3 py-2 text-sm font-medium text-gray-300 rounded-lg hover:bg-gray-700 hover:text-white focus:outline-none">
					<img src="https://cdn.discordapp.com/avatars/<%= userData.id %>/<%= userData.avatar %>.jpg?size=128" class="w-6 h-6 mr-2 rounded-full">
					<span class="mr-2"><%= userData.username %></span>
					<svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
						<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
					</svg>
				</button>
				<div id="dropdownMenu" class="hidden absolute right-0 mt-2 bg-gray-800 rounded-lg shadow-lg overflow-hidden z-20" style="min-width: 10rem;">
					<ul class="py-1 text-sm text-gray-200">
						<li>
							<a href="/dashboard" class="block px-4 py-2 hover:bg-gray-700">Dashboard</a>
						</li>
						<li>
							<a href="/settings" class="block px-4 py-2 hover:bg-gray-700">Settings</a>
						</li>
						<li>
							<a href="/auth/logout" class="block px-4 py-2 hover:bg-gray-700 text-red-400">Logout</a>
						</li>
					</ul>
				</div>
			</div>
		</div>
	</nav>
	
	<!-- Sidebar and Main Content -->
	<div class="flex h-screen pt-16">
		<!-- Sidebar -->
		<aside id="sidebar" class="fixed left-0 top-16 h-full z-10 w-64 transition-transform -translate-x-full sm:translate-x-0">
			<div class="h-full px-3 pb-4 overflow-y-auto sidebar">
				<ul class="space-y-2 pt-4 font-medium">
					<li>
						<a href="/dashboard" class="flex items-center p-3 text-gray-300 rounded-lg hover:bg-gray-700 group">
							<i class="fas fa-gauge-high w-5 h-5 text-gray-400 group-hover:text-white transition duration-75"></i>
							<span class="ms-3">Dashboard</span>
						</a>
					</li>
					<li>
						<a href="/admin" class="flex items-center p-3 text-white rounded-lg bg-primary-600 group">
							<i class="fas fa-shield-alt w-5 h-5 text-white transition duration-75"></i>
							<span class="ms-3">Admin Panel</span>
						</a>
					</li>
					<li>
						<a href="/admin/users" class="flex items-center p-3 text-gray-300 rounded-lg hover:bg-gray-700 group">
							<i class="fas fa-users w-5 h-5 text-gray-400 group-hover:text-white transition duration-75"></i>
							<span class="ms-3">Users</span>
						</a>
					</li>
					<li>
						<a href="/admin/servers" class="flex items-center p-3 text-white rounded-lg bg-primary-600 group">
							<i class="fas fa-server w-5 h-5 text-white transition duration-75"></i>
							<span class="ms-3">Servers</span>
						</a>
					</li>
					<li>
						<a href="/admin/coupons" class="flex items-center p-3 text-gray-300 rounded-lg hover:bg-gray-700 group">
							<i class="fas fa-gift w-5 h-5 text-gray-400 group-hover:text-white transition duration-75"></i>
							<span class="ms-3">Coupons</span>
						</a>
					</li>
					<li>
						<a href="/admin/packages" class="flex items-center p-3 text-gray-300 rounded-lg hover:bg-gray-700 group">
							<i class="fas fa-box w-5 h-5 text-gray-400 group-hover:text-white transition duration-75"></i>
							<span class="ms-3">Packages</span>
						</a>
					</li>
					<li>
						<a href="/admin/settings" class="flex items-center p-3 text-gray-300 rounded-lg hover:bg-gray-700 group">
							<i class="fas fa-cog w-5 h-5 text-gray-400 group-hover:text-white transition duration-75"></i>
							<span class="ms-3">Settings</span>
						</a>
					</li>
					<li>
						<a href="/admin/logs" class="flex items-center p-3 text-gray-300 rounded-lg hover:bg-gray-700 group">
							<i class="fas fa-list w-5 h-5 text-gray-400 group-hover:text-white transition duration-75"></i>
							<span class="ms-3">Logs</span>
						</a>
					</li>
				</ul>
				
				<div class="pt-4 mt-4 border-t border-gray-700">
					<div class="px-3 py-4 rounded-lg bg-gray-800">
						<h3 class="text-sm font-medium text-gray-400 mb-2">System Status</h3>
						<div class="space-y-3">
							<div class="flex items-center gap-2 text-sm">
								<div class="w-3 h-3 bg-green-500 rounded-full"></div>
								<span>API: Online</span>
							</div>
							<div class="flex items-center gap-2 text-sm">
								<div class="w-3 h-3 bg-green-500 rounded-full"></div>
								<span>Panel: Online</span>
							</div>
							<div class="flex items-center gap-2 text-sm">
								<div class="w-3 h-3 bg-green-500 rounded-full"></div>
								<span>Database: Online</span>
							</div>
						</div>
					</div>
				</div>
			</div>
		</aside>
		
		<!-- Main Content -->
		<div class="p-4 sm:ml-64 pt-5 w-full main-content">
			<div class="p-4">
				<!-- Welcome Message -->
				<div class="mb-6">
					<h1 class="text-3xl font-bold mb-2">Server Management</h1>
					<p class="text-gray-400">Manage your servers and platform settings.</p>
				</div>
				
				<!-- Stats Cards -->
				<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 mb-8">
					<!-- Total Users Card -->
					<div class="gradient-border">
						<div class="stat-card h-full bg-dark-card rounded-lg p-6">
							<div class="flex items-center justify-between mb-4">
								<div class="flex items-center space-x-3">
									<div class="w-12 h-12 rounded-lg bg-blue-500/20 flex items-center justify-center">
										<i class="fas fa-users text-xl text-blue-400"></i>
									</div>
									<div>
										<h3 class="text-sm font-medium text-gray-400">Total Users</h3>
										<p class="text-2xl font-semibold"><%= totalUsers %></p>
									</div>
								</div>
								<div class="text-right">
									<span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-blue-900 text-blue-200">
										+3% <i class="fas fa-arrow-up ml-1"></i>
									</span>
								</div>
							</div>
							<p class="mt-2 text-xs text-gray-400">Total registered users on the platform</p>
						</div>
					</div>

					<!-- Active Users Card -->
					<div class="gradient-border">
						<div class="stat-card h-full bg-dark-card rounded-lg p-6">
							<div class="flex items-center justify-between mb-4">
								<div class="flex items-center space-x-3">
									<div class="w-12 h-12 rounded-lg bg-green-500/20 flex items-center justify-center">
										<i class="fas fa-user-check text-xl text-green-400"></i>
									</div>
									<div>
										<h3 class="text-sm font-medium text-gray-400">Active Users</h3>
										<p class="text-2xl font-semibold"><%= activeUsers %></p>
									</div>
								</div>
								<div class="text-right">
									<span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-900 text-green-200">
										+5% <i class="fas fa-arrow-up ml-1"></i>
									</span>
								</div>
							</div>
							<p class="mt-2 text-xs text-gray-400">Users active in the past 30 days</p>
						</div>
					</div>

					<!-- Total Servers Card -->
					<div class="gradient-border">
						<div class="stat-card h-full bg-dark-card rounded-lg p-6">
							<div class="flex items-center justify-between mb-4">
								<div class="flex items-center space-x-3">
									<div class="w-12 h-12 rounded-lg bg-purple-500/20 flex items-center justify-center">
										<i class="fas fa-server text-xl text-purple-400"></i>
									</div>
									<div>
										<h3 class="text-sm font-medium text-gray-400">Total Servers</h3>
										<p class="text-2xl font-semibold"><%= totalServers %></p>
									</div>
								</div>
								<div class="text-right">
									<span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-purple-900 text-purple-200">
										+7% <i class="fas fa-arrow-up ml-1"></i>
									</span>
								</div>
							</div>
							<p class="mt-2 text-xs text-gray-400">Total servers deployed on the platform</p>
						</div>
					</div>

					<!-- Revenue Card -->
					<div class="gradient-border">
						<div class="stat-card h-full bg-dark-card rounded-lg p-6">
							<div class="flex items-center justify-between mb-4">
								<div class="flex items-center space-x-3">
									<div class="w-12 h-12 rounded-lg bg-amber-500/20 flex items-center justify-center">
										<i class="fas fa-dollar-sign text-xl text-amber-400"></i>
									</div>
									<div>
										<h3 class="text-sm font-medium text-gray-400">Monthly Revenue</h3>
										<p class="text-2xl font-semibold">$<%= revenue %></p>
									</div>
								</div>
								<div class="text-right">
									<span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-amber-900 text-amber-200">
										+12% <i class="fas fa-arrow-up ml-1"></i>
									</span>
								</div>
							</div>
							<p class="mt-2 text-xs text-gray-400">Revenue generated this month</p>
						</div>
					</div>
				</div>
				
				<!-- Quick Actions -->
				<div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-8">
					<div class="card rounded-lg p-6 bg-dark-card border border-gray-700">
						<div class="w-12 h-12 rounded-lg bg-blue-500/20 flex items-center justify-center mb-4">
							<i class="fas fa-user-plus text-blue-400"></i>
						</div>
						<h3 class="text-lg font-semibold mb-2">Add User</h3>
						<p class="text-gray-400 mb-4">Create a new user account with custom resources.</p>
						<a href="/admin/users/add" class="inline-flex items-center text-sm font-medium text-blue-400 hover:text-blue-300">
							Add user
							<svg class="w-4 h-4 ml-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
								<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
							</svg>
						</a>
					</div>
					
					<div class="card rounded-lg p-6 bg-dark-card border border-gray-700">
						<div class="w-12 h-12 rounded-lg bg-green-500/20 flex items-center justify-center mb-4">
							<i class="fas fa-gift text-green-400"></i>
						</div>
						<h3 class="text-lg font-semibold mb-2">Create Coupon</h3>
						<p class="text-gray-400 mb-4">Generate new coupon codes for your users.</p>
						<a href="/admin/coupons/add" class="inline-flex items-center text-sm font-medium text-green-400 hover:text-green-300">
							Create coupon
							<svg class="w-4 h-4 ml-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
								<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
							</svg>
						</a>
					</div>
					
					<div class="card rounded-lg p-6 bg-dark-card border border-gray-700">
						<div class="w-12 h-12 rounded-lg bg-purple-500/20 flex items-center justify-center mb-4">
							<i class="fas fa-box text-purple-400"></i>
						</div>
						<h3 class="text-lg font-semibold mb-2">Create Package</h3>
						<p class="text-gray-400 mb-4">Define new resource packages for the store.</p>
						<a href="/admin/packages/add" class="inline-flex items-center text-sm font-medium text-purple-400 hover:text-purple-300">
							Create package
							<svg class="w-4 h-4 ml-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
								<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
							</svg>
						</a>
					</div>
				</div>
				
				<!-- Server List -->
				<div class="bg-dark-card rounded-lg border border-gray-700 p-6 mb-8">
					<div class="flex items-center justify-between mb-6">
						<h2 class="text-xl font-semibold">Server List</h2>
						<a href="/admin/servers" class="text-sm text-blue-400 hover:text-blue-300">View all</a>
					</div>
					
					<% if (typeof req.session.allServers !== 'undefined' && req.session.allServers.length > 0) { %>
						<div class="overflow-x-auto">
							<table class="w-full text-sm text-left text-gray-300">
								<thead class="text-xs uppercase bg-gray-700 text-gray-300">
									<tr>
										<th scope="col" class="px-6 py-3 rounded-l-lg">ID</th>
										<th scope="col" class="px-6 py-3">Name</th>
										<th scope="col" class="px-6 py-3">User</th>
										<th scope="col" class="px-6 py-3">Node</th>
										<th scope="col" class="px-6 py-3">Status</th>
										<th scope="col" class="px-6 py-3">Resources</th>
										<th scope="col" class="px-6 py-3">Actions</th>
									</tr>
								</thead>
								<tbody>
									<% req.session.allServers.forEach(server => { %>
										<tr class="border-b border-gray-700">
											<td class="px-6 py-4 font-medium whitespace-nowrap text-white">
												<%= server.id %>
											</td>
											<td class="px-6 py-4">
												<%= server.name || 'Unnamed Server' %>
											</td>
											<td class="px-6 py-4">
												<%= server.user || 'Unknown User' %>
											</td>
											<td class="px-6 py-4">
												<%= server.node || 'Unknown Node' %>
											</td>
											<td class="px-6 py-4">
												<% if (server.suspended) { %>
													<span class="badge bg-danger">Suspended</span>
												<% } else { %>
													<span class="badge bg-success">Active</span>
												<% } %>
											</td>
											<td class="px-6 py-4">
												<small>
													RAM: <%= server.limits?.memory || 0 %>MB<br>
													CPU: <%= server.limits?.cpu || 0 %>%<br>
													Disk: <%= server.limits?.disk || 0 %>MB
												</small>
											</td>
											<td class="px-6 py-4 flex gap-2">
												<div class="btn-group">
													<button type="button" class="btn btn-sm btn-primary" data-bs-toggle="modal" data-bs-target="#editServerModal<%= server.id %>">
														<i class="fas fa-edit"></i>
													</button>
													<% if (server.suspended) { %>
														<form action="/admin/servers/<%= server.id %>/unsuspend" method="POST" class="d-inline">
															<button type="submit" class="btn btn-sm btn-success">
																<i class="fas fa-play"></i>
															</button>
														</form>
													<% } else { %>
														<form action="/admin/servers/<%= server.id %>/suspend" method="POST" class="d-inline">
															<button type="submit" class="btn btn-sm btn-warning">
																<i class="fas fa-pause"></i>
															</button>
														</form>
													<% } %>
													<form action="/admin/servers/<%= server.id %>/delete" method="POST" class="d-inline" onsubmit="return confirm('Are you sure you want to delete this server?');">
														<button type="submit" class="btn btn-sm btn-danger">
															<i class="fas fa-trash"></i>
														</button>
													</form>
												</div>
											</td>
										</tr>

										<!-- Edit Server Modal -->
										<div class="modal fade" id="editServerModal<%= server.id %>" tabindex="-1">
											<div class="modal-dialog">
												<div class="modal-content">
													<div class="modal-header">
														<h5 class="modal-title">Edit Server: <%= server.name %></h5>
														<button type="button" class="btn-close" data-bs-dismiss="modal"></button>
													</div>
													<div class="modal-body">
														<form action="/admin/servers/<%= server.id %>/details" method="POST">
															<div class="mb-3">
																<label class="form-label">Name</label>
																<input type="text" class="form-control" name="name" value="<%= server.name %>" required>
															</div>
															<div class="mb-3">
																<label class="form-label">Description</label>
																<textarea class="form-control" name="description" rows="3"><%= server.description %></textarea>
															</div>
															<div class="mb-3">
																<label class="form-label">External ID</label>
																<input type="text" class="form-control" name="external_id" value="<%= server.external_id %>">
															</div>
															<button type="submit" class="btn btn-primary">Save Changes</button>
														</form>
													</div>
												</div>
