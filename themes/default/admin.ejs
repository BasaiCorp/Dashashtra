																<input type="number" class="form-control" name="memory" value="<%= server.limits?.memory || 0 %>" required>
															</div>
															<div class="mb-3">
																<label class="form-label">CPU Limit (%)</label>
																<input type="number" class="form-control" name="cpu" value="<%= server.limits?.cpu || 0 %>" required>
															</div>
															<div class="mb-3">
																<label class="form-label">Disk Space (MB)</label>
																<input type="number" class="form-control" name="disk" value="<%= server.limits?.disk || 0 %>" required>
															</div>
															<div class="mb-3">
																<label class="form-label">Swap Space (MB)</label>
																<input type="number" class="form-control" name="swap" value="<%= server.limits?.swap || 0 %>" required>
															</div>
															<div class="mb-3">
																<label class="form-label">IO Priority</label>
																<input type="number" class="form-control" name="io" value="<%= server.limits?.io || 0 %>" required>
															</div>
															<button type="submit" class="btn btn-primary">Save Changes</button>
														</form>
													</div>
												</div>
											</div>
										</div>
									<% }); %>
								</tbody>
							</table>
						</div>
					<% } else { %>
						<div class="text-center py-10">
							<div class="w-16 h-16 bg-gray-700 rounded-full mx-auto mb-4 flex items-center justify-center">
								<i class="fas fa-server text-2xl text-gray-400"></i>
							</div>
							<h3 class="text-lg font-medium mb-2">No Servers Found</h3>
							<p class="text-gray-400 mb-4 max-w-md mx-auto">There are no servers registered on the platform yet.</p>
						</div>
					<% } %>
				</div>
				
				<!-- Recent Activity & System Logs -->
				<div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
					<!-- Recent Activity -->
					<div class="bg-dark-card rounded-lg border border-gray-700 p-6">
