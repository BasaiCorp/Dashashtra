  <!-- Plan Type Navigation Script -->
  <script>
    document.addEventListener('DOMContentLoaded', function() {
      const planTypeChips = document.querySelectorAll('.plan-type-chip');
      const planSections = document.querySelectorAll('.plan-section');

      function showPlanSection(planType) {
        planSections.forEach(section => {
          if (section.id === `${planType}-plans`) {
            section.classList.remove('hidden');
          } else {
            section.classList.add('hidden');
          }
        });
      }

      planTypeChips.forEach(chip => {
        chip.addEventListener('click', function() {
          // Remove active class from all chips
          planTypeChips.forEach(c => c.classList.remove('active'));
          
          // Add active class to clicked chip
          this.classList.add('active');
          
          // Show corresponding plan section
          const planType = this.getAttribute('data-plan-type');
          showPlanSection(planType);
        });
      });
    });
  </script>
